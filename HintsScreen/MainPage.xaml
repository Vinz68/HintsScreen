<Page
    x:Class="HintsScreen.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HintsScreen"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Loaded="Page_Loaded">

    <Grid Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="373*"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="titleImage" Grid.Column="1" HorizontalAlignment="Left" Height="64" Margin="20,40,0,0" VerticalAlignment="Top" Width="585" Opacity="0.9" Source="Assets/EscapeRoomHintLightWob.png" Stretch="UniformToFill"/>
        <Image x:Name="hintImage" Grid.Column="1" HorizontalAlignment="Left" Height="891" Margin="2,130,0,0" VerticalAlignment="Top" Width="1813"/>
        <TextBlock x:Name="hintTextBlock" Grid.Column="1" HorizontalAlignment="Left" Margin="20,179,0,0" TextWrapping="Wrap" Text="TextBlock default text for designer" VerticalAlignment="Top" Height="710" Width="1795" Foreground="White" Opacity="0.7" FontSize="48" FontFamily="MV Boli"/>

    </Grid>
</Page>
